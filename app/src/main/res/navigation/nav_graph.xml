<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/picFragment">

    <fragment
        android:id="@+id/picFragment"
        android:name="com.zrq.nicepicturedemo.ui.PicFragment"
        android:label="fragment_pic"
        tools:layout="@layout/fragment_pic" />
    <action
        android:id="@+id/action_global_picFragment"
        app:destination="@id/picFragment" />
    <activity
        android:id="@+id/picActivity"
        android:name="com.zrq.nicepicturedemo.ui.PicActivity"
        android:label="activity_pic"
        tools:layout="@layout/activity_pic" />
    <action
        android:id="@+id/action_global_picActivity"
        app:destination="@id/picActivity"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right" />
</navigation>